@using WebFront_End.Models;
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model RegisterVM;
@{
    ViewData["Title"] = "Index";
}

<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form name="register" method="post" asp-action="Register" asp-controller="Register">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                <div class="form-outline mb-4">
                                    <input type="text" asp-for="FirstName" id="Rspace" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1cdg">Your FirstName</label>
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                <div class="form-outline mb-4">
                                    <input type="text" asp-for="LastName" id="Rspace" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1cdg">Your LastName</label>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-outline mb-4">
                                    <input type="email" asp-for="Email" id="Rspace" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example3cdg">Your Email</label>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="form-outline mb-4">
                                    <input type="password" asp-for="Password" id="Rspace" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg">Password</label>
                                </div>
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                                <div >
                                    <div class='input-group'
                                     id='datetimepicker1'
                                     data-td-target-input='nearest'
                                     data-td-target-toggle='nearest'>
                                     <div class="form-outline mb-4">
                                    <input id="Rspace" 
                                           asp-for=BirthDate
                                           type='text'
                                           class='form-control form-control-lg'
                                           data-td-target='#datetimepicker1'
                                           placeholder="--/--/----" />
                                           <label class="form-label" for="form3Example1cdg">Your birthdate</label>
                                           </div>
                                    <span class='input-group-text'
                                          data-td-target='#datetimepicker1'
                                          data-td-toggle='datetimepicker'>
                                        <span class='fa-solid fa-calendar'></span>
                                    </span>
                                    </div>
                                </div>

                                <span asp-validation-for="Weight" class="text-danger"></span>
                                <div class="form-outline mb-4">
                                    <input type="text" asp-for="Weight" id="Rspace" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg">Weight(in kg)</label>
                                </div>
                                <span asp-validation-for="Length" class="text-danger"></span>
                                <div class="form-outline mb-4">
                                    <input type="text" asp-for="Length" id="Rspace" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg">Length(in cm)</label>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                    <label class="form-check-label" for="form2Example3g">
                                        I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a asp-action="Index" asp-controller="LogIn"
                                                                class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
